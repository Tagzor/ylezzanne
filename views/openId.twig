{% extends 'ylezzanne.html.twig' %}

{% block content %}
<div class="container">
	<form class="form-signin" action="{{ path('login_check') }}" method="post">

			{% if msg %}
			    {{ msg }}
			{% endif %}
			
	        <h2 class="form-signin-heading">ID login</h2>
	        
	        <label for="username" class="sr-only">Kasutajanimi</label>
	        <input type="text" id="username" name="_username" value="{{user.username}}"  class="form-control" placeholder="Kasutajanimi" required autofocus />
	        
	        <label for="password" class="sr-only">Parool</label>
	        <input type="password" id="password" name="_password" value="{{user.password}}" class="form-control" placeholder="Parool" required />

	    <button class="btn btn-lg btn-primary btn-block" type="submit">Sisene</button>
	</form>


</div>
{% endblock %}