{% extends 'ylezzanne.html.twig' %}

{% block content %}
<div class="container">
	<form class="form-signin" action="{{ path('check_path') }}" method="post">
	        {{ error }}
	        <h2 class="form-signin-heading">Sisselogimine</h2>
	        
	        <label for="_username" class="sr-only">Kasutajanimi</label>
	        <input type="text" id="_username" name="_username" value="{{ last_username }}"  class="form-control" placeholder="Kasutajanimi" required autofocus />
	        
	        <label for="_password" class="sr-only">Parool</label>
	        <input type="password" id="_password" name="_password" value="" class="form-control" placeholder="Parool" required />
	        
	    <button class="btn btn-lg btn-primary btn-block" type="submit">Logi sisse</button>
		<button type="button" class="btn btn-info btn-block"><img src="{{ app.request.basepath }}/images/id-kaart.png" alt="mobiilid">Sisene Mobiil-IDga</button>
		<button type="button" class="btn btn-info btn-block"><img src="{{ app.request.basepath }}/images/mobiil-id.png" alt="mobiilid">Sisene Mobiil-IDga</button>
	</form>
</div>
{% endblock %}